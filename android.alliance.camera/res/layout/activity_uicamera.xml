<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null" >
    
    <SurfaceView 
        android:id="@+id/sv_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent" 
	    android:layout_gravity="left">
    
	    <LinearLayout
	        android:id="@+id/leftMenu"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent" 
		    android:orientation="vertical"
		    android:background="#44000000">
		    
	        <ImageView
			    android:id="@+id/ivResolution"
			    android:scaleType="fitCenter"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:src="@drawable/bt_resolution_default" />
	        
	        <ImageButton
			    android:id="@+id/ibLeft1"
   	            android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:src="@android:drawable/ic_menu_edit" />
	        
	        <ImageButton
			    android:id="@+id/ibLeft2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@android:drawable/ic_menu_preferences" />
	        
	        <ImageView
	            android:id="@+id/ibFlashlight"
	            android:scaleType="fitCenter"
	            android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:src="@drawable/bt_flashlight_auto_default"/>
			    
	    </LinearLayout>
	    
	     <LinearLayout
	         android:id="@+id/leftMenuLevel1"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent" 
		    android:orientation="vertical"
		    android:background="#66000000"
		    android:layout_toRightOf="@+id/leftMenu"
		    android:visibility="invisible">
	        
	         <ImageButton
			    android:id="@+id/ibLeft11"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@android:drawable/ic_menu_close_clear_cancel" />
	         
	         <ImageButton
			    android:id="@+id/ibLeft12"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@android:drawable/ic_menu_gallery" />
	         
	      </LinearLayout>
	
	</RelativeLayout>
	 
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent" 
	    android:layout_gravity="right"
	    android:orientation="vertical"
	    android:background="#44000000">

		<ImageButton
		    android:id="@+id/ib0"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@android:drawable/ic_menu_gallery" />

		<ImageButton
		    android:id="@+id/ib1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@android:drawable/ic_menu_add" />

		<ImageButton
		    android:id="@+id/ib2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@android:drawable/ic_menu_camera" />

	</LinearLayout>
	 
	
	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_gravity="bottom|center_horizontal">
		
	      <LinearLayout
	        android:id="@+id/layoutZoom"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:orientation="horizontal"
		    android:background="@null">
	         
	          
	        </LinearLayout>
	 </RelativeLayout>
	 
	  <android.alliance.focus.MyFocusRectangle
                    android:id="@+id/focus_rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
</FrameLayout>