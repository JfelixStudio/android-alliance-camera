<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alliance.sensors"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="android.alliance.sensors.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="android.alliance.sensors.SensorActivity"
            android:label="Sensor.TYPE_ACCELEROMETER"
            android:configChanges="orientation|screenSize">
        </activity>
        
        <activity
	        android:name="android.alliance.sensors.YAchseActivity"
	        android:label="YAchse"
	        android:configChanges="orientation|screenSize"> 
    	</activity>
    
        <activity
	        android:name="android.alliance.sensors.CheckSensorActivity"
	        android:label="CheckSensor"
	        android:configChanges="orientation|screenSize"> 
    	</activity>
    	
        <activity
	        android:name="android.alliance.sensors.ProximityActivity"
	        android:label="Sensor.TYPE_PROXIMITY"
	        android:configChanges="orientation|screenSize"> 
    	</activity>
        
    </application>

   
        
</manifest>